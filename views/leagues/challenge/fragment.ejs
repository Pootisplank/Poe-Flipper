<div id="layout">
    <div id="menu">
        <div class="pure-menu">
            <a href="/" class="pure-menu-heading">Flipping</a>
            <ul class="pure-menu-list">
                <li class="pure-menu-item"><a href="/challenge/currency" class="pure-menu-link">Currency</a></li>
                <li class="pure-menu-item current"><a href="/challenge/fragment" class="pure-menu-link">Fragments</a></li>
            </ul>
        </div>
    </div>

    <div id="main">
        <div class = "header">
            <h1 style="margin-bottom:1em;">Fragments</h1>
        </div>

        <div class="content">
            <table class="pure-table">
                <thead>
                    <tr>
                        <th>Currency</th>
                        <th>Buy</th>
                        <th>Sell</th>
                        <th>Profit</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(item of fragment) { %>
                        <tr>
                            <td> 
                                <img class="currency-icon" src=<%= item.icon %>>
                                <%= item.name %> 
                            </td>

                            <td class="text-right <%=item.buyCount < 10 ? 'medium-confidence' : ''%>"> 

                                <% if (item.buyChaos == null || item.buyCount < 6) { %>
                                    <span class="no_data">Not Enough Data</span>
                                <% } else { %>
                                    <%= item.buyChaos %>
                                    <span class="separator">×</span>
                                    <img class="currency-icon" src=<%= item.chaosIcon %>>  
                                    <span class="separator">=</span>
                                    <%= item.buyItem %>
                                    <span class="separator">×</span>
                                    <img class="currency-icon" src=<%= item.icon %>>
                                    <a href=<%= item.buyLink %> >
                                        <i class="fas fa-search fa-border search-icon"></i>
                                    </a>
                                <% } %>
                            </td>

                            <td class="text-right <%=item.sellCount < 10 ? 'medium-confidence' : ''%>">
                                <% if (item.sellChaos == null || item.sellCount < 6) { %>
                                    <span class="no_data">Not Enough Data</span>
                                <% } else { %>
                                    <%= item.sellItem %>
                                    <span class="separator">×</span>
                                    <img class="currency-icon" src=<%= item.icon %>>  
                                    <span class="separator">=</span>
                                    <%= item.sellChaos %>
                                    <span class="separator">×</span>
                                    <img class="currency-icon" src=<%= item.chaosIcon %>>
                                    <a href=<%= item.sellLink %> >
                                        <i class="fas fa-search fa-border search-icon"></i>
                                    </a>
                                <% } %>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>
<script src="js/script.js"></script>
